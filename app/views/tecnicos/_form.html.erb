<%= form_for(@tecnico) do |f| %>
<% if @tecnico.errors.any? %>
<fieldset id="erros">
   <div class="ui-state-error ui-corner-all" style="padding: 5px; width: 50%">
     <h3><%= t('errors.messages.titulo') %>:</h3>
     <br>
      <ul>
       <% @tecnico.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
     </ul>
   </div>
</fieldset>
<% end %>
<hr>
  <div class="clearfix">
    <%= f.label :nome %>
    <div class="input">
       <%= f.text_field :nome %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :cpf %>
    <div class="input">
       <%= f.text_field :cpf %>
    </div>
  </div>
  <div class="actions">
	<%= f.submit t('botao.salvar'), :class => "btn primary" %>
    <a href="<%= tecnicos_path %>"><button class="btn" name="btnback"><%= t('botao.cancelar')%></button></a>
  </div>
<% end %>
